<Window x:Class="Jpp.Ironstone.DocumentManagement.Views.DocumentTypeSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jpp.Ironstone.DocumentManagement.Views"
        mc:Ignorable="d"
        Title="Document Type"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="0,0,0,0">
        <Label>Set document type:</Label>
        <ComboBox Height="30" Margin="10" Width="600" ItemsSource="{Binding DrawingTypes}" SelectedValue="{Binding SelectedType}"/>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="okButton" IsDefault="True" Width="150" Height="25" Margin="10">OK</Button>
            <Button Name="cancelButton" IsCancel="True" Width="150" Height="25" Margin="10">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
