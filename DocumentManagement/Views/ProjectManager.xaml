<ui:HostedUserControl x:Class="Jpp.Ironstone.DocumentManagement.Views.ProjectManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jpp.Ironstone.DocumentManagement.Views"
             xmlns:ui="clr-namespace:Jpp.Ironstone.Core.UI;assembly=IronstoneCoreUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Margin="10" Header="Project Settings" VerticalAlignment="Top">
            <StackPanel>
                <Label>Project Name</Label>
                <TextBox Text="{Binding Project}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</ui:HostedUserControl>
